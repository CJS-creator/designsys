{
    "name": "@designsys/vscode-extension",
    "displayName": "DesignSys",
    "description": "Headless Design System Generator for VS Code",
    "version": "0.0.1",
    "publisher": "designsys",
    "engines": {
        "vscode": "^1.85.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "designsys.setApiKey",
                "title": "DesignSys: Set API Key"
            },
            {
                "command": "designsys.pull",
                "title": "DesignSys: Pull Design System"
            }
        ],
        "configuration": {
            "title": "DesignSys",
            "properties": {
                "designsys.apiUrl": {
                    "type": "string",
                    "default": "",
                    "description": "URL of the DesignSys API Endpoint (e.g. https://<ref>.functions.supabase.co/v1-api/v1/tokens)"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/fs-extra": "^11.0.4",
        "@types/glob": "^8.1.0",
        "@types/mocha": "^10.0.6",
        "@types/node": "20.x",
        "@types/vscode": "^1.85.0",
        "@typescript-eslint/eslint-plugin": "^6.15.0",
        "@typescript-eslint/parser": "^6.15.0",
        "@vscode/test-electron": "^2.3.8",
        "eslint": "^8.56.0",
        "glob": "^10.3.10",
        "mocha": "^10.2.0",
        "typescript": "^5.3.3"
    },
    "dependencies": {
        "axios": "^1.6.5",
        "fs-extra": "^11.2.0",
        "@designsys/shared": "*"
    }
}